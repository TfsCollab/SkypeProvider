<?xml version="1.0" encoding="utf-8"?>
<Project DefaultTargets="Compile" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <OutputPath></OutputPath>
    <VisualStudioCollaborationProvidersPath>$(ProgramFiles)\Microsoft Visual Studio 10.0\Common7\IDE\PublicAssemblies\CollaborationProviders</VisualStudioCollaborationProvidersPath>
  </PropertyGroup>
  <Target Name="DeployToVisualStudio">
    <!-- Note: We need to copy the generated binary to a special visual studio folder -->
    <!-- This is the path: C:\Program Files\Microsoft Visual Studio 9.0\Common7\IDE\PublicAssemblies\CollaborationProviders -->
    <CreateItem Include="$(OutputPath)\*" Exclude="$(OutputPath)\**\Microsoft.TeamFoundation.Collaboration.dll">
      <Output ItemName="TargetFiles" TaskParameter="Include"/>
    </CreateItem>
    <Copy 
      Condition="Exists('$(VisualStudioCollaborationProvidersPath)')" 
      
      SourceFiles="@(TargetFiles)" 
      DestinationFolder="$(VisualStudioCollaborationProvidersPath)" />
    
  </Target> 
  
</Project>